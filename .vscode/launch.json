{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug GM-Zig Demo",
      "type": "gdb",
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/gm",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "GM_ZIG_DEBUG",
          "value": "1"
        }
      ],
      "externalConsole": false,
      "preLaunchTask": "zig: build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "set print pretty on",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug GM-Zig Optimized",
      "type": "gdb",
      "request": "launch",
      "program": "${workspaceFolder}/zig-out/bin/gm",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "GM_ZIG_DEBUG",
          "value": "1"
        }
      ],
      "externalConsole": false,
      "preLaunchTask": "zig: build optimized",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "set print pretty on",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug GM-Zig Tests",
      "type": "gdb",
      "request": "launch",
      "program": "${workspaceFolder}/zig-cache/o/*/test",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "GM_ZIG_TEST_DEBUG",
          "value": "1"
        }
      ],
      "externalConsole": false,
      "preLaunchTask": "zig: test",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "set print pretty on",
          "ignoreFailures": true
        }
      ]
    }
  ]
}